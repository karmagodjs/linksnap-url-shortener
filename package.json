{
  "name": "linksnap-backend",
  "version": "1.0.0",
  "description": "Scalable URL Shortener Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "migrate": "node migrations/migrate.js",
    "seed": "node migrations/seed.js",
    "docker:build": "docker build -t linksnap-api .",
    "docker:run": "docker run -p 5000:5000 linksnap-api",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "pm2 start ecosystem.config.js --env production"
  },
  "keywords": [
    "url-shortener",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "redis",
    "scalable"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4",
    "pg": "^8.11.1",
    "redis": "^4.6.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "validator": "^13.9.0",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.2",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.44.0",
    "eslint-config-standard": "^17.1.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}